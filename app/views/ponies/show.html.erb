<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= cl_image_tag @pony.photo.path, width: 300, height: 300, crop: :fill unless @pony.photo.nil?%>
    </div>
    <div class="col-xs-4">
        <% %w(name color age race description location). each do |method|  %>
          <% value = @pony[method.to_sym]  %>
          <% unless value.nil? || value.strip == "" %>
            <p> <strong><%= method.capitalize %></strong> - <%= value %> </p>
          <% end %>
        <% end %>
    </div>
  </div>
  <br>
  <%= link_to "My Ponies", ponies_path, class:"btn btn-primary" %>
  <br>
  <br>
  <%= link_to "My Listings", pony_offers_path, class:"btn btn-primary" %>
</div>



